{
  "buildCommand": "cd front-lojas && npm run build",
  "outputDirectory": "front-lojas/.next",
  "framework": "nextjs",
  "installCommand": "cd front-lojas && npm install",
  "devCommand": "cd front-lojas && npm run dev",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_ENV": "production"
  }
}
